<% layout("layouts/boilerplate.ejs") %>
<link
  href="https://cdn.maptiler.com/maptiler-sdk-js/v2.2.0/maptiler-sdk.css"
  rel="stylesheet"
/>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h3 class="mb-4 text-center"><%= list.title %></h3>
      <!-- Listing Image -->
      <img
        src="<%= list.image.url %>"
        alt="<%= list.title %>"
        class="img-fluid rounded mb-4 border"
        style="max-height: 400px; object-fit: cover; width: 100%"
      />

      <!-- Details List -->
      <ul class="list-group mb-4">
        <li class="list-group-item">
          <strong>Owned By : </strong>
          <%= list.owner.username %>
        </li>
        <li class="list-group-item">
          <strong>Description:</strong>
          <%= list.description %>
        </li>
        <li class="list-group-item">
          <strong>Price:</strong> â‚¹<%= list.price.toLocaleString("en-IN") %>
        </li>
        <li class="list-group-item">
          <strong>Location:</strong>
          <%= list.location %>
        </li>
        <li class="list-group-item">
          <strong>Country:</strong>
          <%= list.country %>
        </li>
      </ul>

      <!-- Action Buttons -->
      <% if(currUser && currUser._id.equals(list.owner._id)) {%>

      <div class="d-flex justify-content-between">
        <a href="/listings/<%= list._id %>/edit" class="btn btn-warning mb-3"
          >Edit</a
        >

        <form action="/listings/<%= list._id %>?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-danger mb-3">Delete</button>
        </form>
      </div>
      <%}%>

      <!-- review -->
      <hr />
      <div class="card my-4">
        <% if(currUser) { %>
        <div class="card-body">
          <h4 class="card-title mb-3">Leave a Comment</h4>
          <form
            method="post"
            action="/listings/<%=list._id%>/reviews"
            novalidate
            class="needs-validation"
          >
            <fieldset class="starability-growRotate">
              <input
                type="radio"
                id="no-rate"
                class="input-no-rate"
                name="review[rating]"
                value="1"
                checked
                aria-label="No rating."
              />
              <input
                type="radio"
                id="first-rate1"
                name="review[rating]"
                value="1"
              />
              <label for="first-rate1" title="Terrible">1 star</label>
              <input
                type="radio"
                id="first-rate2"
                name="review[rating]"
                value="2"
              />
              <label for="first-rate2" title="Not good">2 stars</label>
              <input
                type="radio"
                id="first-rate3"
                name="review[rating]"
                value="3"
              />
              <label for="first-rate3" title="Average">3 stars</label>
              <input
                type="radio"
                id="first-rate4"
                name="review[rating]"
                value="4"
              />
              <label for="first-rate4" title="Very good">4 stars</label>
              <input
                type="radio"
                id="first-rate5"
                name="review[rating]"
                value="5"
              />
              <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>

            <div class="mb-3">
              <label for="review" class="form-label">Your Review</label>
              <textarea
                class="form-control"
                id="review"
                name="review[comment]"
                rows="5"
                placeholder="Write your comment..."
                required
              ></textarea>
              <div class="invalid-feedback">Review cannot be empty!!!</div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
        <hr />

        <% } %> <% if(list.review.length > 0) { %>
        <div class="container my-4">
          <h4 class="mb-4">All Reviews</h4>
          <div class="row g-3">
            <% for (let review of list.review) { %>
            <div class="col-md-6 col-lg-4">
              <div class="card h-100 border shadow-sm rounded-3">
                <div class="card-body d-flex flex-column">
                  <p class="card-text mb-2">
                    <strong>Comment:</strong>
                    <%= review.comment %>
                  </p>
                  <p
                    class="starability-result"
                    data-rating="<%= review.rating %>"
                  ></p>
                  <small class="text-muted mb-3"
                    >By: <%= review.author.username %></small
                  >

                  <!-- Delete button at the bottom, aligned right -->

                  <% if( currUser && currUser._id.equals(review.author._id)) {
                  %>

                  <form
                    action="/listings/<%=list._id%>/reviews/<%= review._id %>?_method=DELETE"
                    method="POST"
                    class="mt-auto d-flex justify-content-end"
                  >
                    <button class="btn btn-outline-danger btn-sm">
                      Delete
                    </button>
                  </form>
                  <% } %>
                </div>
              </div>
            </div>
            <% } %>
          </div>
        </div>
        <%}%>
      </div>
      <div id="map" style="height: 400px"></div>
    </div>
  </div>
</div>
<script src="https://cdn.maptiler.com/maptiler-sdk-js/v2.2.0/maptiler-sdk.umd.js"></script>
<script>
  let map_token = "<%= process.env.MAP_TOKEN %>";
  let listing = <%- JSON.stringify(list) %> ;
</script>
<script src="/js/map.js"></script>
